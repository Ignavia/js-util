{
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true,
        "node": true
    },

    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },

    "extends": "eslint:recommended",
    "rules": {
        "no-constant-condition": 0,
        "semi": [2, "always"]
    }
}